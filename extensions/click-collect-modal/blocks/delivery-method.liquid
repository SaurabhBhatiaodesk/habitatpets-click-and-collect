{% render 'delivery-method', section: block %}
<script>
    const deliveryContainer = document.querySelector('.delivery-container');
    const checkoutButton1 = document.querySelector('.{{block.settings.cart__ctas}}');

    // Ensure deliveryContainer is not a child of checkoutButton
    if (deliveryContainer !== null && checkoutButton1 !== null && !checkoutButton1.contains(deliveryContainer)) {
    // Insert the delivery container before the checkout button
    checkoutButton1.parentNode.insertBefore(deliveryContainer, checkoutButton1);
    } else {
    console.error("Error: deliveryContainer cannot be inserted before checkoutButton.");
    }
</script>
